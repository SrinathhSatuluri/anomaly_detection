# Flask
FLASK_APP=api.app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this

# Database (using pg8000 driver)
DATABASE_URL=postgresql+pg8000://postgres:password@localhost:5432/anomaly_db

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672//

# Celery
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=db+postgresql+pg8000://postgres:password@localhost:5432/anomaly_db

# Ramp API (mock for now)
RAMP_API_KEY=mock_api_key
RAMP_API_URL=https://api.ramp.com/v1